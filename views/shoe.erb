<h1><%= @shoe.brand %> brand Shoes</h1>
<div class="row">
  <div class="well">
    <h3>Edit This Shoe Brand</h3>
    <form action="/shoes/<%= @shoe.id() %>" method="post">
      <input type="hidden" name="_method" value="patch">
      <input name="brand" type="text" value="brand">
      <button type="submit" class="btn btn-lg btn-warning">Edit</button>
    </form>
    <h3>Delete This Shoe Brand</h3>
    <form action="/shoes/<%= @shoe.id() %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <button type="submit" class="btn btn-lg btn-danger">Delete</button>
    </form>
  </div>

</div>
<div>
  <a class="btn btn-lg btn-info" href="/">Back to Main</a>
</div>
