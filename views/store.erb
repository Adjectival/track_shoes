<div class="row well">
  <div class="col-md-6 col-sm-6 col-xs-12">
    <h3>Edit This Store</h3>
    <form action="/stores/<%= @store.id() %>" method="post">
      <input type="hidden" name="_method" value="patch">
      <input name="name" type="text" value="store name">
      <button type="submit" class="btn btn-lg btn-warning">Edit</button>
    </form>
  </div>
  <div class="col-md-6 col-sm-6 col-xs-12">
    <h3>Delete This Store</h3>
    <form action="/stores/<%= @store.id() %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <button type="submit" class="btn btn-lg btn-danger">Delete</button>
    </form>
  </div>
</div>
<div class="row">
  <h1>Shoe brands in <%= @store.name %></h1>
  <hr>
  <% if @store.shoes.any?() %>
    <ul>
      <% @store.shoes.each() do |shoe| %>
        <li><h3><%= shoe.brand() %></h3></li>
      <% end %>
    </ul>
  <% else %>
    <h4>No Shoe brands in this store</h4>
  <% end %>
</div>
<div class="row well">
  <h3>Available Shoe brands</h3>
  <% if @shoes.any?() %>
    <form action="/stores/<%= @store.id() %>/add_shoes" method="post">
      <% @shoes.each() do |shoe| %>
        <div class="checkbox">
        <input type="checkbox" name="shoe_ids[]" value="<%= shoe.id()%>"><h4><%= shoe.brand() %></h4>
        </div>
      <% end %>
        <input type="hidden" name="_method" value="post"><br>
        <button type="submit" class="btn btn-lg btn-success">Add Shoes</button>
    </form>
  <% else %>
    <h4>No Shoe brands, <a href="/">please add some</a></h4>
  <% end %>
</div>
<div>
  <a class="btn btn-lg btn-info" href="/">Back to Main</a>
</div>
