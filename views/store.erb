<div class="orange-top-gradient">
  <h1><%= @store.name %></h1>
  <h2>stocks these Shoes</h2>
  <hr>
  <% if @store.shoes.any?() %>
    <ul>
      <% @store.shoes.each() do |shoe| %>
        <li><h3><%= shoe.brand() %></h3></li>
      <% end %>
    </ul>
  <% else %>
    <h4>No Shoe brands in this store</h4>
  <% end %>
</div>
<div>
  <h2>Available brands</h2>
  <% if @shoes.any?() %>
    <form action="/stores/<%= @store.id() %>/add_shoes" method="post">
      <input type="hidden" name="_method" value="patch">
      <% @shoes.each() do |shoe| %>
        <div class="checkbox">
        <h4><input type="checkbox" name="shoe_ids[]" value="<%= shoe.id()%>"><%= shoe.brand() %></h4>
        </div>
      <% end %>
        <button type="submit" class="">Add Shoes</button>
    </form>
  <% else %>
    <h4>No Shoe brands, <a href="/">please add some</a></h4>
  <% end %>
</div>
<div class="orange-bottom-gradient">
    <h3>Change this Store's Name?</h3>
    <form action="/stores/<%= @store.id() %>" method="post">
      <input type="hidden" name="_method" value="patch">
      <input name="store_name" type="text">
      <button type="submit" class="">Edit</button>
    </form>
    <h3>Delete This Store??</h3>
    <form action="/stores/<%= @store.id() %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <button type="submit" class="">Delete</button>
    </form>
</div>
<div>
  <a href="/"><button>Back to Main</button></a>
</div>
