<div class="top-gradient">
  <!-- <div class="col-md-6 col-sm-6 col-xs-12"> -->
    <h3>Edit This Store</h3>
    <form action="/stores/<%= @store.id() %>" method="post">
      <input type="hidden" name="_method" value="patch">
      <input name="store_name" type="text">
      <button type="submit" class="">Edit</button>
    </form>
  <!-- </div> -->
  <!-- <div class="col-md-6 col-sm-6 col-xs-12"> -->
    <h3>Delete This Store</h3>
    <form action="/stores/<%= @store.id() %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <button type="submit" class="">Delete</button>
    </form>
  <!-- </div> -->
</div>
<div>
  <h1>Shoe brands in <%= @store.name %></h1>
  <hr>
  <% if @store.shoes.any?() %>
    <ul>
      <% @store.shoes.each() do |shoe| %>
        <li><h3><%= shoe.brand() %></h3></li>
      <% end %>
    </ul>
  <% else %>
    <h4>No Shoe brands in this store</h4>
  <% end %>
</div>
<div class="top-gradient">
  <h3>Available Shoe brands</h3>
  <% if @shoes.any?() %>
    <form action="/stores/<%= @store.id() %>/add_shoes" method="post">
      <input type="hidden" name="_method" value="patch">
      <% @shoes.each() do |shoe| %>
        <div class="checkbox">
        <input type="checkbox" name="shoe_ids[]" value="<%= shoe.id()%>"><h4><%= shoe.brand() %></h4>
        </div>
      <% end %>
        <button type="submit" class="">Add Shoes</button>
    </form>
  <% else %>
    <h4>No Shoe brands, <a href="/">please add some</a></h4>
  <% end %>
</div>
<div>
  <a class="" href="/">Back to Main</a>
</div>
